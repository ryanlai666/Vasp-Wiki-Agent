# Copy this file to .env and fill in your values

# Gemini API Configuration
# Embeddings: Uses free sentence-transformers by default (no API key needed)
# Inference: Uses Gemini LLM (requires API key)
GEMINI_API_KEY=your_api_key_here  # Required for LLM inference, optional for embeddings
EMBEDDING_MODEL=embedding-001
LLM_MODEL=gemini-2.5-flash
USE_GEMINI_EMBEDDINGS=false  # false = free sentence-transformers (default), true = Gemini embeddings (requires paid tier)

# Vector Store Configuration
FAISS_INDEX_PATH=embeddings/faiss_index

# Wiki Configuration
WIKI_BASE_URL=https://vasp.at/wiki
WIKI_API_URL=https://vasp.at/wiki/api.php

# RAG Configuration
TOP_K=5
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MIN_CHUNK_SIZE=100

# Server Configuration
BACKEND_HOST=localhost
BACKEND_PORT=8000
